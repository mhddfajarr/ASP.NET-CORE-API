@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}
<div class="card card-outline card-gray-dark">
    <div class="card-header text-center">
        <a href="../../index2.html" class="h1"><b>Admin</b>LTE</a>
    </div>
    <div class="card-body">
        <p class="login-box-msg">Sign in to start your session</p>

        <form id="loginForm">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="NIK or Email" id="inputNikOrEmail" name="nikOrEmail" required>
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
                <span class="invalid-feedback" id="nikOrEmailFeedback">
                </span>
            </div>
            <div class="input-group mb-3">
                <input type="password" class="form-control" placeholder="Password" id="inputPassword" required>
                <div class="input-group-append"  style="cursor: pointer;">
                    <div class="input-group-text" id="togglePassword">
                        <span class="fas fa-eye-slash" id="toggleIcon"></span>
                    </div>
                </div>
                <span class="invalid-feedback" id="passwordFeedback"></span>
            </div>
            <div class="row">
                <div class="col-8">
                    <div class="icheck-primary">
                        <input type="checkbox" id="remember">
                        <label for="remember">
                            Remember Me
                        </label>
                    </div>
                </div>
            </div>
        </form>

        <div class="social-auth-links text-center mt-2 mb-3">
                <button type="submit" form="loginForm" class="btn btn-dark btn-block">Sign In</button>
        </div>

        <p class="mb-1">
            <a asp-controller="Account" asp-action="ForgotPassword">I forgot my password</a>
        </p>
        <p class="mb-0">
            <a href="register.html" class="text-center">Register a new membership</a>
        </p>
    </div>
    <!-- /.card-body -->
</div>
<div class="overlay d-none" id="spinnerOverlay">
    <div class="text-center">
        <div class="spinner-border text-light" role="status">
            <span class="visually-hidden"></span>
        </div>
        <p class="mt-3 text-light">Please wait, logging in...</p> 
    </div>
</div>

@section Script {
    <script src="https://cdn.jsdelivr.net/npm/jwt-decode@3.1.2/build/jwt-decode.min.js"></script>
    <script src="~/script/accountScript.js"></script>
}