
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/MainLayout.cshtml";
}


<!-- Main content -->
<section class="content mt-5">
    <div class="container-fluid">
    <div class="row">
        <div class="col-12">
                <div class="card card-gray-dark card-outline">
                    <div class="card-header d-flex justify-content-between align-items-start">
                        <h4 class="mb-0 text-bold">University</h4>
                        <div class="ml-auto">
                            <button type="button" class="btn btn-dark" title="Add new university" data-toggle="modal" data-tooltip="tooltip" data-placement="top" data-target="#modalUniversity">
                                Add new university
                            </button>
                        </div>
                    </div>
                <div class="card-body">
                        <div class="modal fade" id="modalUniversity">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4 id="titleModal" class="modal-title">Add new university</h4>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <form id="universityForm">
                                            <input type="text" id="univ_Id" hidden />
                                            <div class="form-group">
                                                <label for="inputUnivName">University Name</label>
                                                <input type="text" class="form-control" id="inputUnivName" name="univName" placeholder="Enter university name" required>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                        <button type="submit" id="buttonSave" form="universityForm" class="btn btn-primary">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <table id="tableUniversity" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>University ID</th>
                                <th>University Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>
</section>

@section Script{
    <script src="~/script/universityScript.js"></script>
}

